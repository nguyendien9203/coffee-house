<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="80.0" prefWidth="348.0" style="-fx-background-color: #fff; -fx-background-radius: 5px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.aptech.c2304l.learning.controller.OrderCardController">

   <children>

      <AnchorPane fx:id="orderProductImage" prefHeight="68.0" prefWidth="68.0">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </AnchorPane>
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <Label fx:id="orderProductName" alignment="TOP_LEFT" prefHeight="38.0" prefWidth="234.0" text="Machiano" wrapText="true">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="orderProductId" visible="false" />
                  <Label fx:id="orderProductDescription" visible="false" />
                  <Label fx:id="btnDeleteItem" alignment="TOP_CENTER" onMouseClicked="#removeOrderItem" prefHeight="4.0" prefWidth="12.0" text="x" textFill="#d1d1d1">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label fx:id="orderProductPrice" alignment="BOTTOM_LEFT" prefHeight="30.0" prefWidth="145.0" text="45.000Ä‘" />
                  <HBox prefHeight="30.0" prefWidth="117.0">
                     <children>
                        <Button fx:id="btnDecrement" alignment="CENTER" mnemonicParsing="false" onAction="#decrementQuantity" prefHeight="31.0" prefWidth="31.0" style="-fx-background-color: transparent; -fx-border-color: #d1d1d1; -fx-border-radius: 5px;" text="-" />
                        <TextField fx:id="txtQuantity" alignment="CENTER" prefHeight="31.0" prefWidth="45.0" style="-fx-background-color: transparent;" text="1">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="btnIncrement" alignment="CENTER" mnemonicParsing="false" onAction="#incrementQuantity" prefHeight="31.0" prefWidth="31.0" style="-fx-background-color: transparent; -fx-border-color: #d1d1d1; -fx-border-radius: 5px;" text="+" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
   </padding>
</HBox>
